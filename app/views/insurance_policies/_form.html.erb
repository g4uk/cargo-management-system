<%= render 'layouts/application/form_errors', form: @form %>
<%= form_for @form do |f| %>
  <div class="col-md-8 offset-md-5">
    <div class="form-group row">
        <%= f.label :valid_to, 'Valid to', class: "col-form-label" %>
      <div class="col-sm-10" data-provide="datepicker">
        <%= f.text_field :valid_to, class: 'datepicker' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :insurance_policy_type, 'Type', class: "col-form-label" %>
      <div class="col-sm-4">
        <%= f.select :insurance_policy_type, %w(Full RU BY EU), {}, class: 'form-control'  %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :cost, 'Cost', class: "col-form-label" %>
      <div class="col-sm-4">
        <%= f.text_field :cost, class: 'form-control', placeholder: '12$' %>
      </div>
    </div>
    <% unless current_driver %>
      <div class="form-group row">
        <%= f.label :driver_id, 'Driver', class: "col-form-label" %>
        <div class="col-sm-4">
          <%= f.select :driver_id, driver_select, {}, class: 'form-control', prompt: 'Select customer' %>
        </div>
      </div>
    <% else %>
      <%= f.hidden_field :driver_id, value: current_driver.id %>
    <% end %>
    <div class="form-group offset-md-1">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
