<div class="col-md-12 offset-md-1" style="margin-bottom: 15px" >
<%= search_form_for @search, url: trailers_path, method: :get, class: "form-inline my-2 my-lg-0" do |f| %>
  <%= f.search_field :reg_number_cont, class: 'form-control mr-sm-2', placeholder: 'Reg number contains' %>
    <%= f.search_field :trailer_type_cont, class: 'form-control mr-sm-2', placeholder: 'Type contains' %>
    <%= f.search_field :length_eq, class: 'form-control mr-sm-2', placeholder: 'Length equals' %>
    <%= f.search_field :volume_eq, class: 'form-control mr-sm-2', placeholder: 'Volume equals' %>
  <div class="form-group">
    <%= f.submit 'Search', class: 'btn btn-outline-success my-2 my-sm-0', style: 'margin-right: 10px' %>
    <%= link_to 'Reset', {}, class: 'btn btn-outline-danger my-2 my-sm-0' %>
  </div>
<% end %>
</div>
