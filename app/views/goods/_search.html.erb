<div class="col-md-8 offset-md-3" style="margin-bottom: 15px" >
<%= search_form_for @search, url: goods_path, method: :get, class: "form-inline my-2 my-lg-0" do |f| %>
  <%= f.search_field :name_cont, class: 'form-control mr-sm-2', placeholder: 'Name contains' %>
    <%= f.search_field :goods_type_cont, class: 'form-control mr-sm-2', placeholder: 'Goods type contains' %>
  <div class="form-group">
    <%= f.submit 'Search', class: 'btn btn-outline-success my-2 my-sm-0', style: 'margin-right: 10px' %>
    <%= link_to 'Reset', {}, class: 'btn btn-outline-danger my-2 my-sm-0' %>
  </div>
<% end %>
</div>
