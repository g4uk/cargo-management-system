<%= render 'layouts/application/form_errors', form: @form %>
<%= form_for @form do |f| %>
  <div class="col-md-10 offset-md-4">
    <div class="form-group row" >
      <%= f.label :name, 'Name', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Google' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :weight, 'Weight', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :weight, class: 'form-control', placeholder: 'Weight in kg(primary)' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :volume, 'Volume', class: "col-sm-1 col-form-label" %>
      <div >
        <%= f.text_field :volume, class: 'form-control', placeholder: 'Volume in m3' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :goods_type, 'Goods type', class: "col-sm-1 col-form-label" %>
      <div>
        <%= f.text_field :goods_type, class: 'form-control', placeholder: 'Clothes' %>
      </div>
    </div>
    <% unless current_customer %>
      <div class="form-group row">
        <%= f.label :customer_id, 'Customer', class: "col-sm-1 col-form-label" %>
        <div>
          <%= f.select :customer_id, customer_select, {}, class: 'form-control col-sm-6', prompt: 'Select customer' %>
        </div>
      </div>
    <% else %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
    <% end %>
    <div class="form-group offset-md-1">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
