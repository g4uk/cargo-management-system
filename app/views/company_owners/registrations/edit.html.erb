<h2 class="text-center">Edit profile
  (<%= link_to "Delete my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %>
  )</h2>
<div class="col-md-4 offset-md-4 text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <div class="col-sm-6">
        <%= f.label :first_name, class: 'col-form-label' %>
        <%= f.text_field :first_name, autofocus: true,
                         class: 'form-control',
                         placeholder: 'Alex' %>
      </div>
      <div class="col-sm-6">
        <%= f.label :last_name, class: 'col-form-label' %>
        <%= f.text_field :last_name,
                         class: 'form-control',
                         placeholder: 'Xela' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-6">
        <%= f.label :phone, class: 'col-form-label' %>
        <%= f.text_field :phone,
                         class: 'form-control',
                         placeholder: '777-77-77' %>
      </div>
      <div class="col-sm-6">
        <%= f.label :email, class: 'col-form-label' %>
        <%= f.email_field :email,
                         class: 'form-control', autocomplete: "email",
                         placeholder: 'example@email.com' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-6">
        <%= f.label :password, class: 'col-form-label' %>
        <%= f.password_field :password,
                             class: 'form-control',
                             placeholder: '********' %>
      </div>
      <div class="col-sm-6">
        <%= f.label :password_confirmation, class: 'col-form-label' %>
        <%= f.password_field :password_confirmation,
                             class: 'form-control',
                             placeholder: '********' %>
      </div>
      <div class="offset-sm-4 text-center">
        <% if @minimum_password_length %>
          <div></div>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(needed to confirm your changes)</i><br/>
      <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
    </div>

    <%= f.submit "Update", class: 'btn btn-success' %>
  <% end %>
</div>
