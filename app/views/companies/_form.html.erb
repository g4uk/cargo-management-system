<%= render 'layouts/application/form_errors', form: @form %>
<%= form_for @form do |f| %>
  <div class="col-md-10 offset-md-4">
    <div class="form-group row" >
      <%= f.label :name, 'Name', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Google' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :address, 'Address', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :address, class: 'form-control', placeholder: 'Grodno, Ozeshko 22' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'Email', class: "col-sm-1 col-form-label" %>
      <div >
        <%= f.email_field :email, class: 'form-control', placeholder: 'example@email.org' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :phone, 'Phone', class: "col-sm-1 col-form-label" %>
      <div>
        <%= f.phone_field :phone, class: 'form-control', placeholder: '777-77-77' %>
      </div>
    </div>
    <% if current_admin %>
      <div class="form-group row">
        <%= f.label :company_owner_id, 'Company owner', class: "col-form-label" %>
        <div class="col-sm-2">
          <%= f.select :company_owner_id, company_owner_select, {prompt: 'Select company owner'}, class: 'form-control' %>
        </div>
      </div>
    <% end %>
    <div class="form-group offset-md-1">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
