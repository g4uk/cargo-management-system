<%= render 'layouts/application/form_errors', form: @form %>
<%= form_for @form do |f| %>
  <div class="col-md-4 offset-md-4">
    <div class="form-group row" >
      <div class="col-sm-3">
      <%= f.label :categories, 'Categories', class: 'col-form-label"' %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :categories, class: 'form-control', placeholder: 'A B C D E' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3">
      <%= f.label :valid_to, 'Valid to', class: 'col-form-label"' %>
      </div>
      <div class="col-sm-8" data-provide="datepicker">
        <%= f.text_field :valid_to, class: 'form-control' %>
      </div>
    </div>
    <% unless current_driver %>
      <div class="form-group row">
        <div class="col-sm-3">
        <%= f.label :driver_id, 'Driver', class: "col-form-label" %>
        </div>
        <div class="col-sm-8">
          <%= f.select :driver_id, driver_select, {}, class: "form-control",  propmt: 'Select' %>
        </div>
      </div>
    <% end %>
    <div class="form-group row">
      <div class="col-sm-3">
      <%= f.label :additional_notes, 'Additional notes', class: "col-form-label" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :additional_notes, class: 'form-control', placeholder: 'Additional notes', rows: '2' %>
      </div>
    </div>
    <div class="form-group col-sm-1 offset-sm-5">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
