<%= render 'layouts/application/form_errors', form: @form %>
<%= form_for @form do |f| %>
  <div class="col-md-10 offset-md-4">
    <div class="form-group row" >
      <%= f.label :first_name, 'First name', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'Ivan' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, 'Last name', class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10'">
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Ivanov' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'Email', class: "col-sm-1 col-form-label" %>
      <div >
        <%= f.email_field :email, class: 'form-control', placeholder: 'example@email.org' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :mobile_phone, 'Mobile phone', class: "col-sm-1 col-form-label" %>
      <div>
        <%= f.phone_field :mobile_phone, class: 'form-control', placeholder: '777-777-77' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, 'Password', class: "col-form-label" %>
      <div class="col-sm-auto">
        <%= f.password_field :password, class: 'form-control', placeholder: '********' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, 'Confirmation', class: "col-form-label" %>
      <div class="col-sm-auto">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '********' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :company_phone, 'Company phone', class: "col-sm-1 col-form-label" %>
      <div>
        <%= f.phone_field :company_phone, class: 'form-control', placeholder: '777-777-77' %>
      </div>
    </div>
    <div class="form-group offset-md-1">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
