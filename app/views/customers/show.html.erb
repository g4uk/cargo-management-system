<div class="breadcrumbs">
  <nav aria-label="breadcrumb" >
    <%= breadcrumbs do %>
      <%= breadcrumb 'Customers', customers_path %>
      <%= breadcrumb "#{@model.id}" %>
    <% end %>
  </nav>
</div>
<div class="col-md-6 offset-md-3 show-margin">
  <ul class="list-group">
    <li class="list-group-item"><strong>First name: </strong><%= @model.first_name %></li>
    <li class="list-group-item"><strong>Last name: </strong><%= @model.last_name%></li>
    <li class="list-group-item"><strong>Email: </strong><%= @model.email %></li>
    <li class="list-group-item"><strong>Company phone: </strong><%= @model.company_phone %></li>
    <li class="list-group-item"><strong>Mobile phone: </strong><%= @model.mobile_phone %></li>
    <li class="list-group-item">
      <strong>Goods: </strong><%= link_to @model.goods.count, goods_path %>
    </li>
    <li class="list-group-item">
      <strong>Orders: </strong><%= link_to @model.orders.count, orders_path %>
    </li>
    <li class="list-group-item"><strong>Actions: </strong>
      <%= link_to 'Edit', edit_customer_path(@model), class: 'btn btn-success btn-sm' %>
      <%= link_to 'Delete', customers_path(@model),
                  class: 'btn btn-danger btn-sm', method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    </li>
  </ul>
</div>
